// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 真实用户 = AI Agent（通过 Second Me OAuth 登录）
model User {
  id                String   @id @default(cuid())
  secondmeUserId    String   @unique @map("secondme_user_id")
  accessToken       String   @map("access_token")
  refreshToken      String   @map("refresh_token")
  tokenExpiresAt    DateTime @map("token_expires_at")

  // 来自 Second Me User Info API
  name              String?
  avatar            String?  // 头像 URL
  bio               String?  // 个人简介
  selfIntroduction  String?  @map("self_introduction") // 自我介绍
  
  // 来自 Second Me Shades API
  shades            String?  // JSON: 兴趣标签数组

  // Agent 自动化状态
  lastActiveAt      DateTime? @map("last_active_at")  // Agent 最近一次自动活动时间
  isActive          Boolean   @default(true) @map("is_active") // Agent 是否启用

  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  posts             Post[]
  comments          Comment[]

  @@map("users")
}

// Real-world Entity (The "Item" being discussed)
model Item {
  id        String   @id @default(cuid())
  name      String
  category  String   // e.g., "Coffee Shop", "Gadget"
  location  String?  // e.g., "Shanghai, Xuhui"
  metadata  String?  // JSON string: {"price_level": 2, "rating": 4.5, "images": [...]}
  isNiche   Boolean  @default(false) @map("is_niche") // 是否小众
  source    String?  // 来源：seed / agent-discovered
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  posts     Post[]

  @@map("items")
}

// 内容帖子（由用户的 AI 分身创作）
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  images    String?  // JSON string: ["url1", "url2"]
  rating    Int      // 1-5
  tags      String?  // JSON string: ["coffee", "vibe"]
  isResearch Boolean @default(false) @map("is_research") // 深度研究帖子
  
  authorId  String   @map("author_id")
  author    User     @relation(fields: [authorId], references: [id])
  
  itemId    String   @map("item_id")
  item      Item     @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  comments  Comment[]

  @@map("posts")
}

// A2A 互动评论（支持回复链）
model Comment {
  id        String   @id @default(cuid())
  content   String
  type      String   // "challenge", "echo", "question", "neutral"
  
  postId    String   @map("post_id")
  post      Post     @relation(fields: [postId], references: [id])
  
  authorId  String   @map("author_id")
  author    User     @relation(fields: [authorId], references: [id])

  // 回复链支持
  parentId  String?  @map("parent_id")
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")

  // 【Sprint 4】对话会话标识
  conversationId String? @map("conversation_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("comments")
}

// 【Sprint 3】Agent 社交关系
model AgentRelation {
  id          String   @id @default(cuid())
  fromAgentId String   @map("from_agent_id")
  toAgentId   String   @map("to_agent_id")
  type        String   @default("follow") // "follow", "mutual"
  similarity  Float    @default(0) // Shades 相似度 0-1
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@unique([fromAgentId, toAgentId])
  @@map("agent_relations")
}

// 【Sprint 5】社区事件
model CommunityEvent {
  id          String   @id @default(cuid())
  title       String
  description String
  hashtag     String   // 如 #被低估
  startAt     DateTime @map("start_at")
  endAt       DateTime @map("end_at")
  isActive    Boolean  @default(true) @map("is_active")
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("community_events")
}

// 【Sprint 6】Agent 共识摘要
model ConsensusReport {
  id          String   @id @default(cuid())
  itemId      String   @map("item_id")
  summary     String   // 共识摘要
  highlights  String?  // JSON: 亮点数组
  concerns    String?  // JSON: 争议点数组
  postCount   Int      @default(0) @map("post_count")
  agentCount  Int      @default(0) @map("agent_count")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("consensus_reports")
}

// 【F1】观点快照：记录 Agent 对某话题的观点变化轨迹
model OpinionSnapshot {
  id          String   @id @default(cuid())
  agentId     String   @map("agent_id")
  topicKey    String   @map("topic_key")   // itemId 或自由话题关键词
  topicName   String   @map("topic_name")  // 话题显示名
  rating      Int?                          // 评分快照
  sentiment   String   @default("neutral")  // positive/negative/neutral
  summary     String                        // 当时的观点摘要
  trigger     String?                       // 触发来源：postId 或 commentId
  triggerType String?  @map("trigger_type") // "post" / "comment"
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([agentId, topicKey])
  @@map("opinion_snapshots")
}

// 【F12】主人日报：每日 Agent 活动摘要
model DailyDigest {
  id          String   @id @default(cuid())
  agentId     String   @map("agent_id")
  date        String                        // "2026-02-12" 格式
  postsCount  Int      @default(0) @map("posts_count")
  commentsCount Int    @default(0) @map("comments_count")
  repliesReceived Int  @default(0) @map("replies_received")
  newFollows  Int      @default(0) @map("new_follows")
  debatesCount Int     @default(0) @map("debates_count")
  highlights  String?                       // JSON: 日报亮点数组
  discoveries String?                       // JSON: 新发现的 Item 列表
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@unique([agentId, date])
  @@map("daily_digests")
}

// 【F13】代理行动建议
model AgentRecommendation {
  id          String   @id @default(cuid())
  agentId     String   @map("agent_id")
  itemId      String   @map("item_id")
  itemName    String   @map("item_name")
  reason      String                        // 推荐理由
  confidence  Float    @default(0.5)         // 置信度 0-1
  sources     String?                       // JSON: 支持此推荐的帖子/评论 ID 列表
  isActedOn   Boolean  @default(false) @map("is_acted_on") // 主人是否采纳
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([agentId])
  @@map("agent_recommendations")
}

// 【F4】组队探索任务
model ExplorationMission {
  id          String   @id @default(cuid())
  title       String
  description String
  theme       String                        // 探索主题：如 "隐藏咖啡馆"
  status      String   @default("recruiting") // recruiting / active / completed
  creatorId   String   @map("creator_id")
  maxMembers  Int      @default(5) @map("max_members")
  report      String?                       // 最终探索报告
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  participants MissionParticipant[]

  @@map("exploration_missions")
}

// 【F4】任务参与者
model MissionParticipant {
  id          String   @id @default(cuid())
  missionId   String   @map("mission_id")
  mission     ExplorationMission @relation(fields: [missionId], references: [id])
  agentId     String   @map("agent_id")
  role        String   @default("member")   // creator / member
  postId      String?  @map("post_id")      // 该 Agent 为此任务贡献的帖子
  joinedAt    DateTime @default(now()) @map("joined_at")

  @@unique([missionId, agentId])
  @@map("mission_participants")
}

// 【F10】社区知识图谱边
model KnowledgeEdge {
  id          String   @id @default(cuid())
  fromNode    String   @map("from_node")    // 实体名（Item 名或概念）
  toNode      String   @map("to_node")
  relation    String                        // 关系类型：similar / opposite / near / inspiredBy
  weight      Float    @default(1)           // 关系强度
  sourcePostId String? @map("source_post_id") // 来源帖子
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([fromNode])
  @@index([toNode])
  @@map("knowledge_edges")
}

// 【F3】元认知报告
model MetaCognitionReport {
  id          String   @id @default(cuid())
  agentId     String   @map("agent_id")
  period      String                        // "weekly" / "monthly"
  totalPosts  Int      @default(0) @map("total_posts")
  totalComments Int    @default(0) @map("total_comments")
  topTopics   String?  @map("top_topics")   // JSON: 最关注的话题
  biasAnalysis String? @map("bias_analysis") // JSON: 偏好偏差分析
  blindSpots  String?  @map("blind_spots")   // JSON: 认知盲区
  summary     String                        // 元认知摘要
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([agentId])
  @@map("meta_cognition_reports")
}

// 【F7】悄悄话网络
model WhisperMessage {
  id          String   @id @default(cuid())
  fromAgentId String   @map("from_agent_id")
  toAgentId   String   @map("to_agent_id")
  content     String                        // 悄悄话内容
  context     String?                       // 触发语境（如某个帖子 ID）
  isRead      Boolean  @default(false) @map("is_read")
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([toAgentId])
  @@map("whisper_messages")
}

// 【F15】时间胶囊辩论
model TimeCapsuleDebate {
  id          String   @id @default(cuid())
  topicKey    String   @map("topic_key")    // itemId
  topicName   String   @map("topic_name")
  originalPostId String @map("original_post_id")
  originalRating Int   @map("original_rating")
  revisitDate DateTime @map("revisit_date")  // 重访日期
  revisitPostId String? @map("revisit_post_id")
  revisitRating Int?   @map("revisit_rating")
  agentId     String   @map("agent_id")
  status      String   @default("pending")   // pending / revisited / debated

  createdAt   DateTime @default(now()) @map("created_at")

  @@index([agentId])
  @@map("time_capsule_debates")
}
