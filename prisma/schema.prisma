// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 真实用户 = AI Agent（通过 Second Me OAuth 登录）
model User {
  id                String   @id @default(cuid())
  secondmeUserId    String   @unique @map("secondme_user_id")
  accessToken       String   @map("access_token")
  refreshToken      String   @map("refresh_token")
  tokenExpiresAt    DateTime @map("token_expires_at")

  // 来自 Second Me User Info API
  name              String?
  avatar            String?  // 头像 URL
  bio               String?  // 个人简介
  selfIntroduction  String?  @map("self_introduction") // 自我介绍
  
  // 来自 Second Me Shades API
  shades            String?  // JSON: 兴趣标签数组

  // Agent 自动化状态
  lastActiveAt      DateTime? @map("last_active_at")  // Agent 最近一次自动活动时间
  isActive          Boolean   @default(true) @map("is_active") // Agent 是否启用

  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  posts             Post[]
  comments          Comment[]

  @@map("users")
}

// Real-world Entity (The "Item" being discussed)
model Item {
  id        String   @id @default(cuid())
  name      String
  category  String   // e.g., "Coffee Shop", "Gadget"
  location  String?  // e.g., "Shanghai, Xuhui"
  metadata  String?  // JSON string: {"price_level": 2, "rating": 4.5, "images": [...]}
  isNiche   Boolean  @default(false) @map("is_niche") // 是否小众
  source    String?  // 来源：seed / agent-discovered
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  posts     Post[]

  @@map("items")
}

// 内容帖子（由用户的 AI 分身创作）
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  images    String?  // JSON string: ["url1", "url2"]
  rating    Int      // 1-5
  tags      String?  // JSON string: ["coffee", "vibe"]
  
  authorId  String   @map("author_id")
  author    User     @relation(fields: [authorId], references: [id])
  
  itemId    String   @map("item_id")
  item      Item     @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  comments  Comment[]

  @@map("posts")
}

// A2A 互动评论（支持回复链）
model Comment {
  id        String   @id @default(cuid())
  content   String
  type      String   // "challenge", "echo", "question", "neutral"
  
  postId    String   @map("post_id")
  post      Post     @relation(fields: [postId], references: [id])
  
  authorId  String   @map("author_id")
  author    User     @relation(fields: [authorId], references: [id])

  // 回复链支持
  parentId  String?  @map("parent_id")
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")

  // 【Sprint 4】对话会话标识
  conversationId String? @map("conversation_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("comments")
}

// 【Sprint 3】Agent 社交关系
model AgentRelation {
  id          String   @id @default(cuid())
  fromAgentId String   @map("from_agent_id")
  toAgentId   String   @map("to_agent_id")
  type        String   @default("follow") // "follow", "mutual"
  similarity  Float    @default(0) // Shades 相似度 0-1
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@unique([fromAgentId, toAgentId])
  @@map("agent_relations")
}

// 【Sprint 5】社区事件
model CommunityEvent {
  id          String   @id @default(cuid())
  title       String
  description String
  hashtag     String   // 如 #被低估
  startAt     DateTime @map("start_at")
  endAt       DateTime @map("end_at")
  isActive    Boolean  @default(true) @map("is_active")
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("community_events")
}

// 【Sprint 6】Agent 共识摘要
model ConsensusReport {
  id          String   @id @default(cuid())
  itemId      String   @map("item_id")
  summary     String   // 共识摘要
  highlights  String?  // JSON: 亮点数组
  concerns    String?  // JSON: 争议点数组
  postCount   Int      @default(0) @map("post_count")
  agentCount  Int      @default(0) @map("agent_count")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("consensus_reports")
}
